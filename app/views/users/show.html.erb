<html>

<head>
  <%= stylesheet_link_tag 'show', media: 'all' %>
  <title><%= @user.nombre%> <%= @user.apellido %></title>
</head>
<body>
  <p style="color: green"><%= notice %></p>

<h1><%= @user.nombre%> <%= @user.apellido %> </h1>

<%# <img src="" alt="infor"> %>

<table id="user-info">
  <thead>
    <tr>
      <th>Apodo</th>
      <th>Correo</th>
      <th>Zona Horaria</th>
      <th>Descripción</th>
    </tr>
  </thead>
  <tbody>
    
      <tr class="user-row">
        <td><%= @user.apodo %></td>
        <td><%= @user.correo %></td>
        <td><%= @user.zona_horaria %></td>
        <td><%= @user.descripcion %></td>
      </tr>
  </tbody>
</table>

<div id="box">
  <button class="custom-button">
    <%= link_to "Editar información", edit_user_path(@user) %>
  </button>

  <button class="custom-button">
    <%= link_to "Regresar", users_path %>
  </button>

   <%= button_to "Eliminar usuario", @user, method: :delete, class: "custom-button" %>
</div>
</body>
</html>


